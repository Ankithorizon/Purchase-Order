@model PartTracking.Context.Models.DTO.OrderMasterEditVM

@{
    ViewData["Title"] = "Warehouse - Edit Order";
}

<style>
    .header {
        justify-content: center;
        align-items: center;
        border: 5px solid red;
        padding-top: 5px;
        padding-bottom: 5px;
        padding-left: 5px;
        font-size: x-large;
        text-align: center;
    }

    .tableData {
        font-size: x-large;
    }
</style>

<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6 header">
        Warehouse - Edit Order
    </div>
    <div class="col-sm-3">
    </div>
</div>
<p></p>

<p></p>
@if (TempData["SPResponse"] != null)
{
    <div class="container response">
        <h3>@TempData["SPResponse"]</h3>
    </div>
}
<p></p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="OrderEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.OrderMasterId)
            <div class="form-group">
                <label asp-for="PartMasterId" class="control-label"></label>
                <select asp-for="PartMasterId" class="form-control"
                        asp-items="(IEnumerable<SelectListItem>)@Model.PartMasterSelectList">
                    <option value="">Pick one</option>
                </select>
                <span asp-validation-for="PartMasterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderQuantity" class="control-label"></label>
                <input asp-for="OrderQuantity" class="form-control" />
                <span asp-validation-for="OrderQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit-Order!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}